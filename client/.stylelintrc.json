{
  "extends": [
    "stylelint-config-standard"
  ],
  "overrides": [
    {
      "files": ["**/*.css"],
      "customSyntax": "postcss-scss",
      "rules": {
        "at-rule-no-unknown": [
          true,
          {
            "ignoreAtRules": [
              "tailwind",
              "apply",
              "layer",
              "screen",
              "variants",
              "responsive",
              "component",
              "utilities"
            ]
          }
        ]
      }
    }
  ]
}
